@page "{customerid}"
@model GroceryCRUDWebApp.Pages.Customers.EditModel
@{
}
<h3>Customer Details Edit @Model.CustomerId</h3>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
     <div class="form-group">
        <label asp-for="@Model.PhoneNo"></label>
        <input asp-for="@Model.PhoneNo" class="form-control" />
    </div>
     <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input asp-for="@Model.Password" class="form-control" />
    </div>
     <div class="form-group">
        <label asp-for="@Model.ConfirmPassword"></label>
        <input asp-for="@Model.ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/Customers/List" class="btn btn-light" role="button">Cancel</a>
    </div>

    </form>