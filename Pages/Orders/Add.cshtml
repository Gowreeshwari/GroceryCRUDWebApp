@page
@model GroceryCRUDWebApp.Pages.Orders.AddModel
@{
}

<form method="post" class="shadow">
    <h4 class="text-center">Customers Order Detail</h4>
   
     <div class="form-group col">
            <label asp-for="@Model.SelectedCustomerId"></label>
            <select asp-for="@Model.SelectedCustomerId" asp-items="@Model.CustomerList" class="form-select"></select>
     </div>

    <div class="form-group">
        <label asp-for="@Model.OrderDate"></label>
       <input asp-for="@Model.OrderDate" class="form-control" />
    </div>
   
     <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div class="row gx-0">
        <button type="submit" class="col btn btn-success me-2">Save</button>
        <a href="/Orders/List" class="col btn btn-default border-secondary ms-2" role="button">Cancel</a>
    </div>
    
    </form>
