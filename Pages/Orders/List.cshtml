@page
@model GroceryCRUDWebApp.Pages.Orders.ListModel
@{
}
<form method="post" class="shadow">
    <div class="row">
        <div class="col-sm-10"><h3>Order Details</h3></div>
        <div class="col-sm-2">
             @if (User.IsInRole("User"))
            {
                <a href="/Orders/Add" class="btn btn-success rounded-pill" role="button">
                    <i class="fa fa-add"></i>
                    Add  
                </a>
            }
        </div>
       
    </div>
    <br />
    <div class=form-group>
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
         <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <br/>

<table class="table">
    <thed>
        <tr>
            <th scope="col">OrderId</th>
            <th scope="col">CustomerId</th>
            <th scope="col">OrderDate</th>
            <th scope="col">Actions</th>
           
        </tr>
    </thed>
    <tbody>
            @if(Model.Orders==null || Model.Orders.Count<0)
            {
                <tr>
                    <td colspan=10>No Orders Found</td>
                </tr>
            }
            else
            {

            @foreach(var d in Model.Orders)
             {
            <tr>
                <td>@d.OrderId</td>
                <td>@d.CustomerId</td>
                <td>@d.OrderDate</td>
                  
                    <td>
                         
                     <a href="/Payment" class="btn btn-outline-warning" role="button">
                            <i class="fas fa-shipping-fast"></i>
                        </a>
                       
                    </td>
               
            </tr>
        }
        }

    </tbody>
    
</table>
</form>